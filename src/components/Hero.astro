    <img
      class="rounded-full shadow-lg size-16"
      src="/Portafolio/avatar.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/angel-ca%C3%B1as-1847072b7/"
